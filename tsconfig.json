{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "types": [
      "kakao.maps.d.ts"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "components/about/InquiryList.tsx", "components/user/Signup.tsx"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}